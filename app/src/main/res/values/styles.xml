<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorTheme3</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:textViewStyle">@style/sukhumvitSetFontStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.SplashScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--Button styles. -->
    <style name="AppTheme.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme.Button.FillColorBlue">
        <item name="android:background">@drawable/bg_button_fill_color_blue</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="AppTheme.Button.FillColorWhite" >
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="AppTheme.Button.OutlineColorWhite">
        <item name="android:background">@drawable/bg_button_outline_color_white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="AppTheme.Button.Google">
        <item name="android:background">@drawable/bg_button_google</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="AppTheme.Button.Facebook">
        <item name="android:background">@drawable/bg_button_facebook</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="sukhumvitSetFontStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/sukhumvit_set</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorTheme3</item>
    </style>


</resources>
