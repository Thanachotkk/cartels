<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp.SignUpActivity">

    <RelativeLayout
        android:id="@+id/relativeLayoutActionBar"
        style="@style/AppTheme.ActionBar.Bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/buttonBack"
            style="@style/AppTheme.ActionBar.ButtonIcon.Back"/>
        <TextView
            android:id="@+id/textViewActionBar"
            style="@style/AppTheme.ActionBar.TitleText"
            android:text="Step 1 / 4"/>
    </RelativeLayout>

    <fragment
        android:id="@+id/fragmentSignUp"
        class="com.internship.nilecon.cartels.SignUp.Step1Fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayoutActionBar"
        tools:layout="@layout/fragment_step1" />

</android.support.constraint.ConstraintLayout>