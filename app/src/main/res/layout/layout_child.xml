<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true">


    <ImageView
        android:id="@+id/imageViewVehicycle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:src="@drawable/im_car"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:text="Car"
        android:textColor="@color/header2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewVehicycle"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Position : "
        android:textStyle="bold"
        android:textColor="@color/header2"
        app:layout_constraintBottom_toBottomOf="@+id/textViewPosition"
        app:layout_constraintEnd_toStartOf="@+id/textViewPosition"
        app:layout_constraintTop_toTopOf="@+id/textViewPosition" />

    <TextView
        android:id="@+id/textViewPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="A5"
        android:textColor="@color/header2"
        app:layout_constraintBottom_toTopOf="@+id/textViewZone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zone : "
        android:textSize="10sp"
        android:textColor="@color/paragraph1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewZone"
        app:layout_constraintEnd_toStartOf="@+id/textViewZone"
        app:layout_constraintTop_toTopOf="@+id/textViewZone" />

    <TextView
        android:id="@+id/textViewZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="A"
        android:textSize="10sp"
        android:textColor="@color/paragraph1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPosition"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>